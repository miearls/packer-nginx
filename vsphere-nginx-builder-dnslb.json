{
  "builders": [
    {
      "type": "vsphere-iso",

      "vcenter_server":      "{{user `vcenter`}}",
      "username":            "{{user `vcenterusername`}}",
      "password":            "{{user `vcenterusername`}}",
      "insecure_connection": "true",

      "vm_name": "{{user `vm_name`}}",
      "host":     "{{user `esxihost`}}",

      "guest_os_type": "ubuntu64Guest",

      "CPUs":             1,
      "RAM":              1024,
      "RAM_reserve_all": false,
      "datastore": "datastore1",

      "disk_controller_type":  "pvscsi",
      "disk_size":        32768,
      "disk_thin_provisioned": true,

      "network": "VM Network",
      "network_card": "vmxnet3",

      "boot_wait": "15s",
      
      "http_directory": "http",

      "iso_url": "{{user `mirror`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

	"iso_paths": [
           "{{user `mirror`}}"
      ],


      "floppy_files": [
        "{{template_dir}}/media/preseed.cfg"
      ],
      "boot_command": [
        "<wait><wait><wait><wait><wait><wait><wait><wait><wait><wait><enter><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz",
        " initrd=/install/initrd.gz",
        " priority=critical",
        " locale=en_US",
        " file=/media/preseed.cfg",
        "<enter>"
      ],
            "ssh_timeout": "{{user `ssh_timeout`}}",
            "ssh_username": "mearls",
            "ssh_password": "mearls",
            "shutdown_command": "sudo systemctl poweroff"
    }
  ],

"provisioners": [
       {
           "type": "file",
           "source": "nginx/nginx-repo.crt",
           "destination": "/tmp/"
       },
       {
           "type": "file",
           "source": "nginx/nginx-repo.key",
           "destination": "/tmp/"
       },
       {
           "type": "file",
           "source": "nginx/api_access.conf",
           "destination": "/tmp/"
       },
       {
           "type": "file",
           "source": "nginx/dns_lb.conf",
           "destination": "/tmp/"
       },
       {
       "type": "shell",
           "execute_command": "sudo {{.Vars}} sh {{.Path}}",
           "scripts": [
               "nginx/install_nginx.sh"
       ]
       }
  ]
}
